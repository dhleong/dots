#!/bin/bash

_check_gradle() {
    ls build.gradle > /dev/null 2> /dev/null
}

start=$(pwd)

while true
do
    if _check_gradle
    then
        # let me know where I am
        pwd
        break
    fi

    cd .. 

    if [ $(pwd) = $HOME ]
    then
        cd $start
        echo "Couldn't find gradle"
        break
    fi
done
